{
  "compilerOptions": {
    "incremental": true,
    "outDir": "dist",
    "sourceMap": true,
    "lib": ["es2017", "esnext.asynciterable"],

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,

    "esModuleInterop": false,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*":["*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts"
  ]
}