<html>
<head><link href="style.css" rel="stylesheet" type="text/css"></head>


<div class = "form">
  <form action="/register" method="POST">
    <div class = "title">Register</div>
    <div class = "input-container ic1">
      <input id ="email" class ="input" type = "email" name="email" placeholder = " " required/>
      <div class = "cut"></div>
      <label for="email" class="placeholder"> Email </label>
    </div>
    <div class = "input-container ic2">
      <input id ="name" class ="input" type = "text" name="name" placeholder = " " required/>
      <div class = "cut"></div>
      <label for="name" class="placeholder"> Name </label>
    </div>
    <div class = "input-container ic2">
      <input id ="password" class ="input" type = "password" name="password" placeholder = " " required/>
      <div class = "cut"></div>
      <label for="password" class="placeholder"> Password </label>
      <input type="checkbox" onclick="showPassword()"> 
      <lable for="checkbox" class="subtitle">Show Password</lable>
      <script>
        function showPassword() {
          var x = document.getElementById("password");
          if (x.type === "password") {
            x.type = "text";
          } else {
            x.type = "password";
          }
        }
        </script>
    </div>  
    <button type="submit" class="submit">Register</button>
  </form>
  <a href="/login">Login</a>
</div>
</html>